{
    "manifest_version": 2,
    "name": "GitHubCleanup",
    "version": "1.6.1",
    "description": "This extension removes some of the unnecessary comments in the GitHub issue section, such as: '+1', 'thanks' and even üëç. Now open source! https://github.com/centerorbit/GitHubCleanup",
    "icons": {
        "128": "icon_128.png"
    },
    "permissions": [
        "tabs",
        "*://github.com/*/issues/*",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://github.com/*/issues/*"
            ],
            "js": [
                "cleanup.js"
            ]
        }
    ],
    "background":
    {
        "scripts":[ "background.js" ]
    },
    "browser_action": {
        "default_icon": "icon.png"
    }
}